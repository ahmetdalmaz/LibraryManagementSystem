@{
    ViewData["Title"] = "Edit";
}
@model Author

<h4 class="fw-bold py-3 mb-4">Yazarlar</h4>
<div asp-validation-summary="ModelOnly">
</div>
<div class="card mb-4 w-75 mx-auto">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Yazar Güncelle</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Author" method="post">
            <div class="mb-3">
                <label class="form-label" for="authorName">Yazar İsmi</label>
                <input type="text" class="form-control" id="authorName" name="authorName" placeholder="Yazar İsmi" asp-for="AuthorName">
                <span class="text-danger" asp-validation-for="AuthorName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="authorSurname">Yazar Soyadı</label>
                <input type="text" class="form-control" id="authorSurname" name="authorSurname" placeholder="Yazar Soyadı" asp-for="AuthorSurname">
                <span class="text-danger" asp-validation-for="AuthorSurname"></span>
            </div>

            <div class="mb-3">
                <label for="authorState" class="form-label">Yazar Durumu</label>
                <select class="form-select" id="authorState" name="authorState" aria-label="Yazar Durumu" asp-for="AuthorState">
                    <option value="true">Etkin</option>
                    <option value="false">Devredışı</option>
                </select>
                <span class="text-danger" asp-validation-for="AuthorState"></span>
            </div>
            <input type="hidden" asp-for="AuthorId" />

            <button type="submit" class="btn btn-primary">Güncelle</button>
        </form>
    </div>
</div>



