@using Entities.Concrete;
@model List<Author>

<h4 class="fw-bold py-3 mb-4">Yazarlar</h4>
<div class="card">
    <h5 class="card-header">Yazar Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Yazar Adı-Soyadı</th>
                    <th>Durumu</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.AuthorName @item.AuthorSurname</td>
                        @if (item.AuthorState == true)
                        {
                            <td><span class="badge bg-label-success me-1">Etkin</span></td>
                        }
                        else
                        {
                            <td><span class="badge bg-label-danger me-1">Devredışı</span></td>
                        }



                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Author/Edit/@item.AuthorId"><i class="bx bx-edit-alt me-2"></i> Edit</a>
                                    <form asp-action="Delete" asp-controller="Author" method="post">
                                        <input type="hidden" name="authorId" value="@item.AuthorId">
                                        <button class="dropdown-item" type="submit"><i class="bx bx-trash me-2"></i>Delete</button>
                                    </form>

                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>
<div class="mt-3">
    <a class="btn btn-primary" href="/Author/Add">Yazar Ekle</a>
</div>