@{
    ViewData["Title"] = "Add";
}
@using WebUI.Models.AuthorModels
@model CreateAuthorModel

<h4 class="fw-bold py-3 mb-4">Yazarlar</h4>
<div asp-validation-summary="ModelOnly">
</div>

<div class="card mb-4 w-75 mx-auto">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Yazar Ekle</h5>
        <small class="text-muted float-end">Default label</small>
    </div>
    <div class="card-body">
        <form asp-action="Add" asp-controller="Author" method="post">
            <div class="mb-3">
                <label class="form-label" for="authorName">Yazar İsmi</label>
                <input type="text" class="form-control" asp-for="AuthorName" placeholder="Yazar İsmi">
                <span class="text-danger" asp-validation-for="AuthorName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="authorSurname">Yazar Soyadı</label>
                <input type="text" class="form-control" asp-for="AuthorSurname" placeholder="Yazar Soyadı">
                <span class="text-danger" asp-validation-for="AuthorSurname"></span>
            </div>

            <div class="mb-3">
                <label for="authorState" class="form-label">Yazar Durumu</label>
                <select class="form-select" asp-for="AuthorState" aria-label="Yazar Durumu">
                    <option value="true">Etkin</option>
                    <option value="false">Devredışı</option>
                </select>
            </div>

            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>