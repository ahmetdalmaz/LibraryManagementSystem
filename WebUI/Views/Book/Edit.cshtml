@{
    ViewData["Title"] = "Add";
}
@model BookModel

<h4 class="fw-bold py-3 mb-4">Kitaplar</h4>
<div asp-validation-summary="ModelOnly">
</div>

<div class="card mb-4 w-75 mx-auto">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h5 class="mb-0">Kitap Güncelle</h5>
    </div>
    <div class="card-body">
        <form asp-action="Edit" asp-controller="Book" method="post">
            <div class="mb-3">
                <label class="form-label" for="BookName">Yazar İsmi</label>
                <input type="text" class="form-control" placeholder="Kitap İsmi" asp-for="BookName">
                <span class="text-danger" asp-validation-for="BookName"></span>
            </div>
            <div class="mb-3">
                <label class="form-label" for="pageCount">Sayfa Sayısı</label>
                <input type="number" class="form-control" placeholder="Sayfa Sayısı" asp-for="PageCount">
                <span class="text-danger" asp-validation-for="PageCount"></span>
            </div>

            <div class="mb-3">
                <label for="CategoryId" class="form-label">Kategorisi</label>
                <select class="form-select" asp-for="CategoryId" aria-label="Kategorisi" asp-items="@(new SelectList(Model.Categories,"CategoryId","CategoryName"))">
                </select>
            </div>

            <div class="mb-3">
                <label for="AuthorId" class="form-label">Yazarı</label>
                <select class="form-select" asp-for="AuthorId" aria-label="Yazarı" asp-items="@(new SelectList(Model.Authors,"AuthorId","AuthorName"))">
                </select>
            </div>

            <div class="mb-3">
                <label for="bookState" class="form-label">Kitap Durumu</label>
                <select class="form-select" asp-for="BookState" name="bookState" id="bookState" aria-label="Kitap Durumu">
                    <option value="true">Etkin</option>
                    <option value="false">Devredışı</option>
                </select>
            </div>
            <input type="hidden" asp-for="BookId" name="BookId" id="BookId" />
            <button type="submit" class="btn btn-primary">Ekle</button>
        </form>
    </div>
</div>