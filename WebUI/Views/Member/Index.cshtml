@{
}
@using WebUI.Models.MemberModels
@model List<MemberModel>

<h4 class="fw-bold py-3 mb-4">Üyeler</h4>
<div class="card">
    <h5 class="card-header">Üye Listesi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Üye Adı-Soyadı</th>
                    <th>Email Adresi</th>
                    <th>Telefon Numarası</th>
                    <th>Üye Durumu</th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MemberName @item.MemberSurname</td>
                        <td>@item.MemberEmail</td>
                        <td>@item.MemberPhoneNumber</td>
                        @if (item.MemberState == true)
                        {
                            <td><span class="badge bg-label-success me-1">Etkin</span></td>
                        }
                        else
                        {
                            <td><span class="badge bg-label-danger me-1">Devredışı</span></td>
                        }



                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Member/Edit/@item.MemberId"><i class="bx bx-edit-alt me-2"></i>Güncelle</a>
                                    <form asp-action="Delete" asp-controller="Member" method="post">
                                        <input type="hidden" name="id" value="@item.MemberId">
                                        <button class="dropdown-item" type="submit"><i class="bx bx-trash me-2"></i>Sil</button>
                                    </form>

                                </div>
                            </div>
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>

</div>
<div class="mt-3">
    <a class="btn btn-primary" href="/Member/Add">Üye Ekle</a>
</div>